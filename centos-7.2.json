{
  "variables": {
    "headless": "true",
    "iso_url": "http://ftp.colocall.net/pub/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
    "iso_checksum": "9ed9ffb5d89ab8cca834afce354daa70a21dcb410f58287d6316259ff89758f5",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "3600s",
    "http_directory": "http",
    "shutdown_command": "shutdown -P now"
  },

  "builders": [
    {
      "name": "centos-7.2-x86_64.vagrant",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "disk_size": 40000,
      "headless": "{{user `headless`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "builds/centos-7.2-x86_64.vagrant.tmp",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "http_directory": "{{user `http_directory`}}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.2-x86_64.vagrant.ks.cfg<enter>"
      ],
      "shutdown_command": "{{user `shutdown_command`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--audio", "none"]
      ]
    },

    {
      "name": "centos-7.2-x86_64.opennebula",
      "type": "qemu",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "builds/centos-7.2-x86_64.opennebula",
      "shutdown_command": "{{user `shutdown_command`}}",
      "disk_size": 4500,
      "format": "qcow2",
      "headless": "{{user `headless`}}",
      "accelerator": "kvm",
      "http_directory": "{{user `http_directory`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "vm_name": "centos-7.2-x86_64.opennebula.{{isotime \"20060102\"}}.qcow2",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "10s",
      "qemuargs": [["-m", "1024"]],
      "boot_command": [
        "<tab>",
        " append edd=off ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.2-x86_64.opennebula.ks.cfg<enter>",
        "<enter>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/upgrade.sh",
        "provisioners/reboot.sh"
      ]
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "scripts": [
        "provisioners/install_guest_additions.sh",
        "provisioners/install_vagrant_key.sh"
      ],
      "only": ["centos-7.2-x86_64.vagrant"]
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "scripts": [
        "provisioners/install_epel.sh",
        "provisioners/opennebula.sh"
      ],
      "only": ["centos-7.2-x86_64.opennebula"]
    },
    {"type": "shell", "script": "provisioners/cleanup_vm.sh"}
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "builds/centos-7.2-x86_64.vagrant/centos-7.2-x86_64.{{isotime \"20060102\"}}.box",
      "only": ["centos-7.2-x86_64.vagrant"]
    },
    {
      "type": "compress",
      "compression_level": 9,
      "output": "builds/centos-7.2-x86_64.opennebula/centos-7.2-x86_64.opennebula.{{isotime \"20060102\"}}.qcow2.gz",
      "keep_input_artifact": true,
      "only": ["centos-7.2-x86_64.opennebula"]
    }
  ]
}
